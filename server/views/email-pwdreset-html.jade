doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{projectName} Password Reset
    style(type='text/css').
      @import url(http://fonts.googleapis.com/css?family=Droid+Sans);
      img {
      max-width: 600px;
      outline: none;
      text-decoration: none;
      -ms-interpolation-mode: bicubic;
      }
      a {
      text-decoration: none;
      border: 0;
      outline: none;
      color: #bbbbbb;
      }
      a img {
      border: none;
      }
      td, h1, h2, h3  {
      font-family: Helvetica, Arial, sans-serif;
      font-weight: 400;
      }
      td {
      text-align: center;
      }
      table {
      border-collapse: collapse !important;
      }
      .headline {
      color: #333333;
      font-size: 36px;
      }
      .force-full-width {
      width: 100% !important;
      }
    style(type='text/css', media='screen').
      @media screen {
      td, h1, h2, h3 {
      font-family: 'Droid Sans', 'Helvetica Neue', 'Arial', 'sans-serif' !important;
      }
      }
    style(type='text/css', media='only screen and (max-width: 480px)').
      @media only screen and (max-width: 480px) {
      table[class="w320"] {
      width: 320px !important;
      }
      }
  body.body(style='padding:0; margin:0; display:block; background:#ffffff; -webkit-text-size-adjust:none', bgcolor='#ffffff')
    table(align='center', cellpadding='0', cellspacing='0', width='100%', height='100%')
      tr
        td(align='center', valign='top', bgcolor='#ffffff', width='100%')
          center
            table.w320(style='margin: 0 auto;', cellpadding='0', cellspacing='0', width='600')
              tr
                td(align='center', valign='top')
                  table(style='margin: 0 auto;', cellpadding='0', cellspacing='0', width='100%')
                    tr
                      td(style='font-size: 30px; text-align:center;')
                        br
                        | #{projectName}
                        br
                        br
                  table(style='margin: 0 auto;', cellpadding='0', cellspacing='0', width='100%', bgcolor='#fafafa')
                    tr
                      td
                        center
                          table(style='margin: 0 auto;', cellpadding='0', cellspacing='0', width='60%')
                            tr
                              td(style='color:#187272;')
                                br
                                |                              You requested a password reset from us. Please ignore message if you didn't. Thank you.
                                br
                                br
                    tr
                      td
                        div
                          //if mso
                            v:roundrect(xmlns:v='urn:schemas-microsoft-com:vml', xmlns:w='urn:schemas-microsoft-com:office:word', href='http://', style='height:50px;v-text-anchor:middle;width:200px;', arcsize='8%', stroke='f', fillcolor='#178f8f')
                              w:anchorlock
                                center
                          a(href='#{resetURL}', style='background-color:#178f8f;border-radius:4px;color:#ffffff;display:inline-block;font-family:Helvetica, Arial, sans-serif;font-size:16px;font-weight:bold;line-height:50px;text-align:center;text-decoration:none;width:200px;-webkit-text-size-adjust:none;') Reset Password
                          //if mso
                        br
                        br
                  table.force-full-width(style='margin: 0 auto;', cellpadding='0', cellspacing='0', bgcolor='#000000')    
                    tr
                      td(style='color:#bbbbbb; font-size:12px;')
                        | Â© #{date} All Rights Reserved
                        br
                        br
